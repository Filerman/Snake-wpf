<Application x:Class="Snake.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Snake"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Główne kolory aplikacji zmienione na odcienie zieleni -->
        <SolidColorBrush x:Key="BackgroundColor">#1E2B21</SolidColorBrush>
        <SolidColorBrush x:Key="GridBackgroundColor">#2C4031</SolidColorBrush>
        <SolidColorBrush x:Key="GridLineColor">#48674F</SolidColorBrush>
        <SolidColorBrush x:Key="TextColor">#EBEBEB</SolidColorBrush>
        <SolidColorBrush x:Key="OverlayColor">#7F000000</SolidColorBrush>

        <FontFamily x:Key="MainFont">Assets/#Droid Sans Mono</FontFamily>
    </Application.Resources>
</Application>
